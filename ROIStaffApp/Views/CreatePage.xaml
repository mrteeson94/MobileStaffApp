<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ROIStaffApp.Views.CreatePage"
             BackgroundColor="#F2A2B1"
             Title="Add New Staff">
    
    
    <ContentPage.Content>
        <StackLayout Margin="20,35,20,20">
            
            <Entry x:Name="nameEntry"
               Placeholder="Enter name" />
            <Entry x:Name="phoneNoEntry"
               Placeholder="Enter Phone" />
            <Entry x:Name="DepartmentEntry"
               Placeholder="Enter Department name" />
            <Entry x:Name="streetEntry"
               Placeholder="Enter street details" />
            <Entry x:Name="cityEntry"
               Placeholder="Enter City" />
            <Entry x:Name="stateEntry"
               Placeholder="Enter state" />
            <Entry x:Name="zipEntry"
               Placeholder="Enter ZIP (4 digits)" />
            <Entry x:Name="countryEntry"
               Placeholder="Enter country" />
            
            <Button Text="Add New Staff"
                Clicked="Button_Clicked"/>
            
            <CollectionView x:Name="collectionView">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout>
                            <Label Text="History:"
                               FontSize="Medium" />
                            <Label Text="{Binding Id}"
                               FontSize="Small" />
                            <Label Text="{Binding Name}"
                               FontSize="Small" />
                            <Label Text="{Binding Phone}"
                               TextColor="Silver"
                               FontSize="Small" />
                            <Label Text="{Binding Department}"
                               TextColor="Silver"
                               FontSize="Small" />
                            <Label Text="{Binding Street}"
                               TextColor="Silver"
                               FontSize="Small" />
                            <Label Text="{Binding City}"
                               TextColor="Silver"
                               FontSize="Small" />
                            <Label Text="{Binding State}"
                               TextColor="Silver"
                               FontSize="Small" />
                            <Label Text="{Binding Zip}"
                               TextColor="Silver"
                               FontSize="Small" />
                            <Label Text="{Binding Country}"
                               TextColor="Silver"
                               FontSize="Small" />
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>